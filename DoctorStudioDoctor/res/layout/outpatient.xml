<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/app_index_doctor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/zjtb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="52dp"
        android:background="@drawable/app_login_login_title"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:background="@drawable/app_login_login_title"
            android:text="@string/app_index_title2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/app_login_login_title"
            android:text="@string/app_index_title1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp" 
            android:background="@drawable/ystx"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="汪洋"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="心血管内科"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="主治医师"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="武汉大学人民医院"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="140dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="星期"
	            android:textSize="16sp"
	            android:textColor="@color/prompt_content_color"
	            android:textStyle="bold"
	            android:layout_weight="3" />
            
            <TextView
                android:id="@+id/textView_time1_my_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="咨询时间"
	            android:textSize="16sp"
	            android:textColor="@color/register_textcolor"
	            android:layout_weight="2.8" />
            
            <TextView
                android:id="@+id/textView_time2_my_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="限号"
	            android:textSize="16sp"
	            android:textColor="@color/register_textcolor"
	            android:layout_weight="3" />
            
            <TextView
                android:id="@+id/textView_time3_my_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="预约"
	            android:textSize="16sp"
	            android:textColor="@color/register_textcolor"
	            android:layout_weight="3" />
            
            <TextView
                android:id="@+id/textView_time4_my_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="详情"
	            android:textSize="16sp"
	            android:textColor="@color/register_textcolor"
	            android:layout_weight="3" />
            
            
        </LinearLayout>
        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reservation_time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="170dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ListView
            android:background="@android:color/white"
            android:id="@+id/listView_medicine_my_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="4dp"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reservation_time"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:background="@drawable/app_login_login_title" 
        android:padding="3dp">
        <TextView android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/sj"/>
        <Button android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_weight="2"
			android:gravity="center"
            android:text="时间"
            android:textColor="@android:color/white"
            android:background="@drawable/app_login_login_title"
            />
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_marginLeft="95dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
       android:gravity="center"
        android:text="您已开通3场在线咨询"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        />
    

</RelativeLayout>