<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <TextView android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_password_manager"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/app_login_login_title"
        android:gravity="center"
        android:textColor="@android:color/white"/>
    <LinearLayout android:layout_marginTop="60dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/app_login_password_phone_input">
        <TextView android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="请输入旧密码："
            android:textSize="20sp"
            android:textColor="#72c145"/>
        <EditText android:id="@+id/app_password_manager_edit1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"/>
        
    </LinearLayout>
    
    <TextView 
        android:layout_marginTop="110dp"
        android:layout_marginLeft="25dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/app_login_login_title"
        android:text="输入新密码"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>
    <TextView android:layout_marginTop="160dp"
        android:layout_marginLeft="25dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/app_login_login_title"
        android:text="请再次输入"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white" android:id="@+id/textView1"/>
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/app_login_password_phone_input"
            android:padding="3dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/app_login_phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@android:color/white"
                android:hint="请输入4位密码" />
        </RelativeLayout>
        
    
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/app_login_password_phone_input"
            android:padding="3dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/app_login_phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@android:color/white"
                android:hint="请输入4位密码" />
        </RelativeLayout>

     
</RelativeLayout>
